<%- include("_header") -%>

    <h1>Customer Export</h1>
    <h3>Total number of records in the database: <%= totalRecords %></h3>
    <h3>Enter a file name and click "Export Customers"</h3>
    <form action="/export" method="post">
        <div class="form-group row mb-3">
            <label for="filename" class="col-sm-2 col-form-label">File Name</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="filename" name="filename" value="export.txt">
            </div>
        </div>
        <div class="form-group row mb-3">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary mb-3" id="exportBtn">Export Customers</button>
            </div>
        </div>
    </form>
    <% if(message.substring(0,5)==="Error" ) { %>
        <h2>Error!</h2>
        <p>
            <%= message %>
        </p>
        <% } %>

<%- include("_footer") -%>