<div class="form-group row mb-3">
    <label for="cusid" class="col-sm-3 col-form-label">ID</label>
    <div class="col-sm-3">
        <input type="number" class="form-control" id="cusid" name="cusid" pattern="[0-9]+" value="<%= projCus.cusid %>" required>
    </div>
    <div class="col-sm-6 d-flex align-items-center">
        <div>(Required)</div>
    </div>
</div>

<div class="form-group row mb-3">
    <label for="cusfname" class="col-sm-3 col-form-label">First Name</label>
    <div class="col-sm-3">
        <input type="text" class="form-control" id="cusfname" name="cusfname" value="<%= projCus.cusfname %>" required>
    </div>
    <div class="col-sm-6 d-flex align-items-center">
        <div>(Required)</div>
    </div>
</div>

<div class="form-group row mb-3">
    <label for="cuslname" class="col-sm-3 col-form-label">Last Name</label>
    <div class="col-sm-3">
        <input type="text" class="form-control" id="cuslname" name="cuslname" value="<%= projCus.cuslname %>" required>
    </div>
    <div class="col-sm-6 d-flex align-items-center">
        <div>(Required)</div>
    </div>
</div>

<div class="form-group row mb-3">
    <label for="cusstate" class="col-sm-3 col-form-label">State</label>
    <div class="col-sm-3">
        <input type="text" class="form-control" id="cusstate" name="cusstate" pattern="[A-Za-z]{2}" title="Please enter a two-letter state abbreviation" value="<%= projCus.cusstate %>">
    </div>
</div>

<div class="form-group row mb-3">
    <label for="cussalesytd" class="col-sm-3 col-form-label">Sales YTD</label>
    <div class="col-sm-3">
        <input class="form-control" id="cussalesytd" name="cussalesytd" value="<%= projCus.cussalesytd %>">
    </div>
</div>

<div class="form-group row mb-3">
    <label for="cussalesprev" class="col-sm-3 col-form-label">Previous Years Sales</label>
    <div class="col-sm-3">
        <input class="form-control" id="cussalesprev" name="cussalesprev" value="<%= projCus.cussalesprev %>">
    </div>
</div>